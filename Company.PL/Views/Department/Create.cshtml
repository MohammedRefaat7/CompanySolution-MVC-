@model DepartmentViewModel
@{
    ViewData["Title"] = "Create";
}

<h3>Create New Department</h3>
<br />
<form asp-action="Create">

    <partial name="PartialViews/_CreateEditPartialView" />

    <input type="submit" value="SUBMIT" class="btn btn-primary btn-outline-dark" />
    <a asp-action="Index" asp-controller="Department" class="btn btn-light btn-outline-danger">Back To Departments Page</a>
</form>
@section _ValidationScripts {
    <partial name="_ValidationScriptsPartial" />
}
