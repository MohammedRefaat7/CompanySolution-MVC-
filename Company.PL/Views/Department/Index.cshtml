
@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Departments";
}
<a class="btn btn-primary btn-outline-dark" asp-action="Create" asp-controller="Department"> Create New Department</a>
<br />
@if (Model.Count() > 0)
{
    <h3 class="mt-1">All Departments</h3>
    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Code)</td>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.CreatedAt)</td>
                <td>@Html.DisplayNameFor(D => D.Employees.Count())</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var depart in Model)
            {
                <tr>
                    <td>@depart.Code</td>
                    <td>@depart.Name</td>
                    <td>@depart.CreatedAt</td>
                    <td><a asp-action="Details" asp-route-id="@depart.Id"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-action="Edit" asp-controller="Department" asp-route-id="@depart.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-controller="Department" asp-route-id="@depart.Id"><i class="fas fa-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-3 alert alert-warning">

        <h4>
            Sorry, There Is No Department
        </h4>
    </div>
}
<br />
<a class="btn btn-outline-primary btn-outline-secondary" asp-action="Index" asp-controller="Home">Back To Home Page</a>


