@model Employee
@{
    ViewData["Title"] = "Edit";
    var departments = new SelectList(@ViewBag.department, "Id", "Name");
}

<h3 class="alert-primary align-baseline">Edit @Model.Name Data</h3>
<br />
<form asp-action="Edit">
    <div>
        <label class="col-form-label-lg" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label-lg" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Department"></label>
        <select class="form-control" asp-items="@departments" asp-for="DepartmentId">
            <option value="@null"> ---- Select Department ---- </option>
        </select>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label-lg" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
        <span class="text-danger" asp-validation-for="Salary"></span>
    </div>
    <div>
        <label class="col-form-label-lg" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div>
        <label class="col-form-label-lg" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <label class="col-form-label-lg" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div>
        <label class="col-form-label-lg" asp-for="HiringDate"></label>
        <input class="form-control" asp-for="HiringDate" />
        <span class="text-danger" asp-validation-for="HiringDate"></span>
    </div>

    <br />
    <input type="submit" value="SAVE" class="btn btn-primary btn-outline-dark" />
    <a asp-action="Index" asp-controller="Department" class="btn btn-light btn-outline-danger">Back To All Employees Page</a>
</form>
