@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "All Employees";
}
<partial name="_CreatedDeletedMsgPartialView" model="@(TempData["CreatedMsg"]?? TempData["DeletedMsg"] )" />

<a class="btn btn-primary btn-outline-dark" asp-action="Create" asp-controller="Employee">Add New Employee</a>

<br />
@if (Model.Count() > 0)
{
    <h3 class="mt-3">All employees</h3>
    <br />
    <div class=" m-2 ">
    <form class="row offset-2">
        <div class="col-8">
            <input id="searchinput" class="form-control" type="text" name="SearchValue" placeholder="Search By Employee Name"/>
        </div>
        <div class="col-4">
            <input class="btn btn-info btn-outline-primary" type="submit" value="Search" />
        </div>
    </form>
    </div>
    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Image)</td>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.Age)</td>
                <td>@Html.DisplayNameFor(D => D.Department)</td>
                <td>@Html.DisplayNameFor(D => D.Salary)</td>
                <td>@Html.DisplayNameFor(D => D.Address)</td>
                <td>@Html.DisplayNameFor(D => D.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(D => D.Email)</td>
                <td>@Html.DisplayNameFor(D => D.HiringDate)</td>
                
                
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td><img src="~/Files/Images/@emp.ImageURL" class="rounded" height="40" width="40" alt="Image" /></td>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@Html.DisplayFor(D => emp.Department.Name)</td>
                    <td>@Html.DisplayFor(D => emp.Salary)</td>
                    <td>@emp.Address</td>
                    <td>@emp.PhoneNumber</td>
                    <td>@Html.DisplayFor(D => emp.Email)</td>
                    <td>@emp.HiringDate</td>
                    
                    <partial name="_ButtonIndexPartialView" model="emp.Id" />
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-3 alert alert-warning">

        <h4>
            Sorry, There Is No Employees
        </h4>
    </div>
}
<br />
<a class="btn btn-outline-primary btn-outline-secondary" asp-action="Index" asp-controller="Home">Back To Home Page</a>

<script>
    const SearchBar = $('#searchinput');
    const Table = $('table');

    SearchBar.on('keyup', function (event)){
    var searchvalue = SearchBar.val();
    $.ajax({
        url: '/Employee/Search',
        type: 'Get',
        data: {searchinput:searchvalue},
        success: function (result) {
            table.html(result)
        },
        error: function (xhr, status, error) {
            console.log(error);
        }
    })
    }
</script>

