@model Employee
@{
    ViewData["Title"] = "Details";
    @*var dn = ViewData["DepartmentName"] as string;*@
}

<h3 class="alert-primary align-baseline">@Model.Name Details</h3>

<div>
    <label class="col-form-label" asp-for="Name"></label>
    <input readonly class="form-control" asp-for="Name" />
</div>
<div>
    <label class="col-form-label" asp-for="Age"></label>
    <input readonly class="form-control" asp-for="Age" />
</div>
<div>
    @{if (Model.DepartmentId != null)
        {
           <label class="col-form-label" asp-for="Department"></label> 
           <input readonly class="form-control" value="@Html.DisplayTextFor(d => d.Department.Name)" />
        }
    else
        {
            <label class="col-form-label" asp-for="Department"></label>
            <input readonly class="form-control" value="Null" />
        }
    }
</div>
<div>
    <label class="col-form-label" asp-for="Salary"></label>
    <input readonly class="form-control" asp-for="Salary" />
</div>
<div>
    <label class="col-form-label" asp-for="Address"></label>
    <input readonly class="form-control" asp-for="Address" />
</div>
<div>
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input readonly class="form-control" asp-for="PhoneNumber" />
</div>
<div>
    <label class="col-form-label" asp-for="Email"></label>
    <input readonly class="form-control" asp-for="Email" />
</div>
<div>
    <label class="col-form-label" asp-for="HiringDate"></label>
    <input readonly class="form-control" asp-for="HiringDate" />
</div>
<div>
    <label class="col-form-label" asp-for="CreatedAt"></label>
    <input readonly class="form-control" asp-for="CreatedAt" />
</div>

<br />
<a asp-action="Edit" asp-controller="Employee" asp-route-id="@Model.Id" class="btn btn-primary btn-outline-danger">Edit</a>
<a asp-action="Index" asp-controller="Employee" class="btn btn-primary btn-outline-dark">Back</a>

