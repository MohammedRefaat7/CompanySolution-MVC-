@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="agileits-top">
	<form asp-action="Register">
		<input class="text" asp-for="FName" placeholder="Your First Name" >
		<span asp-validation-for="FName" class="text-danger" ></span>
		<br />
		<input class="text" asp-for="LName" placeholder="Your Last Name">
		<span asp-validation-for="FName" class="text-danger"></span>
		<br />
		<input class="text" asp-for="Email" placeholder="E-mail">
		<span asp-validation-for="Email" class="text-danger"></span>
		<br />
		<input class="text" asp-for="Password" placeholder="Password">
		<span asp-validation-for="Password" class="text-danger"></span>
		<br />
		<input class="text" asp-for="ConfirmPassword" placeholder="Confirm Password">
		<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		<br />

		<div class="wthree-text">
			<label class="anim">
				<input asp-for="IsAgree" class="checkbox">
				<span asp-validation-for="IsAgree">I Agree To The Terms & Conditions</span>
			</label>
			<div class="clear"> </div>
		</div>
		<input type="submit" value="SIGNUP">
	</form>
	<p>Do you have an Account? <a asp-action="Login"> Login Now!</a></p>
</div>

@section ValidationScriptsSection{
	<partial name="_ValidationScriptsPartial" />
}
		

